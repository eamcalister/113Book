		\draw[ultra thick,green][|-] (-4,.5) -- (-3.5,.5);
		\draw[ultra thick,green][|-] (-3.5,.5) -- (-3,.5);
		\draw[ultra thick,green][|-] (-3,.5) -- (-2.5,.5);
